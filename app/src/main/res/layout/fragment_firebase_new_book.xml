<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".moodle.RegistrationFragment"
    android:orientation="vertical"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/moodle"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="220dp"
            android:id="@+id/camera"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="20dp">
        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:hint="Title"
            android:background="@drawable/button1_corner"
            android:padding="8dp"/>
        <EditText
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:hint="Author"
            android:background="@drawable/button1_corner"
            android:layout_marginTop="6dp"
            android:padding="8dp"/>
        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:hint="Description"
            android:background="@drawable/button1_corner"
            android:layout_marginTop="6dp"
            android:padding="8dp"/>
        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Save book"
            android:layout_marginTop="15dp"
            android:background="@drawable/button2_corner"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display All Book"
            android:background="@drawable/button2_corner"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>